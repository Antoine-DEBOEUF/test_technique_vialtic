{% extends 'base.html.twig' %}

{% block title %}Liste des chauffeurs | {{parent()}}{% endblock %}

{% block body %}
<section>
<h1>Liste des chauffeurs </h1>


<table>
<tr>
    <th>Nom</th>
    <th>Prénom</th>
    <th>Permis</th>
    <th>Numéro de téléphone</th>
    <th>Matricule</th>
    <th>Statut</th>
</tr>
{% for driver in drivers %}
<tr>
    <td>{{driver.name}}</td>
    <td>{{driver.first_name}}</td>
    <td>{% for intitule in driver.driving_license.intitules %}
        {{intitule}}
    {% endfor %}</td>
    <td>{{driver.phone_number}}</td>
    <td>{{driver.registration_number}}</td>
    <td>{{driver.status}}</td>
</tr>
{% endfor %}
</table>

    

</section>
{% endblock %}
